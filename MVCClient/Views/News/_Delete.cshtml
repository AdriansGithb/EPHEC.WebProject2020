<div class="modal fade" id="myModalDelete">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title text-danger">Delete confirmation</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <h6>Are you sure you want to delete this news?</h6>
                <p class="text-info text-center font-weight-bold font-italic" id="newsTitleToDlt"></p>
                <input type="hidden" id="newsIdToDlt">
            </div>

            <!-- Modal footer -->
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelBtnDltModal">No, abort</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="confirmBtnDltModal">Yes, I confirm</button>
            </div>

        </div>
    </div>
</div>