                            <span asp-validation-for="OpeningTimes[0].OpeningHour" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningTimes[0].ClosingHour" class="control-label"></label>
                            <input asp-for="OpeningTimes[0].ClosingHour" class="form-control" />
                            <span asp-validation-for="OpeningTimes[0].ClosingHour" class="text-danger"></span>
                        </div>
