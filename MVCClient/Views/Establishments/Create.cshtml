                            <span asp-validation-for="OpeningTimes[1].ClosingHour" class="text-danger"></span>
                        </div>
                        <span asp-validation-for="OpeningTimes[1]" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 border-right border-bottom">
                        <div class="form-group">
                            <label asp-for="OpeningTimes[2].DayOfWeek" class="control-label font-weight-bold">Wednesday</label>
                            <input asp-for="OpeningTimes[2].DayOfWeek" type="hidden" value="@DayOfWeek.Wednesday" />
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="OpeningTimes[2].IsOpen" /> @Html.DisplayNameFor(model => model.OpeningTimes[2].IsOpen)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningTimes[2].OpeningHour" class="control-label"></label>
                            <input asp-for="OpeningTimes[2].OpeningHour" class="form-control" />
                            <span asp-validation-for="OpeningTimes[2].OpeningHour" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningTimes[2].ClosingHour" class="control-label"></label>
                            <input asp-for="OpeningTimes[2].ClosingHour" class="form-control" />
                            <span asp-validation-for="OpeningTimes[2].ClosingHour" class="text-danger"></span>
                        </div>
                        <span asp-validation-for="OpeningTimes[2]" class="text-danger"></span>

                    </div>
                    <div class="col-md-3 border-bottom">
                        <div class="form-group">
                            <label asp-for="OpeningTimes[3].DayOfWeek" class="control-label font-weight-bold">Thursday</label>
                            <input asp-for="OpeningTimes[3].DayOfWeek" type="hidden" value="@DayOfWeek.Thursday" />
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="OpeningTimes[3].IsOpen" /> @Html.DisplayNameFor(model => model.OpeningTimes[3].IsOpen)
