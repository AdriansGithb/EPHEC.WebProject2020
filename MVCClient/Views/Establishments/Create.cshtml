                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-md-3 border-right">
                        <div class="form-group">
                            <label asp-for="OpeningTimes[4].DayOfWeek" class="control-label font-weight-bold">Friday</label>
                            <input asp-for="OpeningTimes[4].DayOfWeek" type="hidden" value="@DayOfWeek.Friday" />
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="OpeningTimes[4].IsOpen" /> @Html.DisplayNameFor(model => model.OpeningTimes[4].IsOpen)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningTimes[4].OpeningHour" class="control-label"></label>
                            <input asp-for="OpeningTimes[4].OpeningHour" class="form-control" />
                            <span asp-validation-for="OpeningTimes[4].OpeningHour" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningTimes[4].ClosingHour" class="control-label"></label>
                            <input asp-for="OpeningTimes[4].ClosingHour" class="form-control" />
                            <span asp-validation-for="OpeningTimes[4].ClosingHour" class="text-danger"></span>
                        </div>
                        <span asp-validation-for="OpeningTimes[4]" class="text-danger"></span>

                    </div>
                    <div class="col-md-3 border-right">
                        <div class="form-group">
                            <label asp-for="OpeningTimes[5].DayOfWeek" class="control-label font-weight-bold">Saturday</label>
                            <input asp-for="OpeningTimes[5].DayOfWeek" type="hidden" value="@DayOfWeek.Saturday" />
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="OpeningTimes[5].IsOpen" /> @Html.DisplayNameFor(model => model.OpeningTimes[5].IsOpen)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="OpeningTimes[5].OpeningHour" class="control-label"></label>
