                    <span asp-validation-for="Details.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details.Email" class="control-label font-weight-bold">Public email</label>
                    <input asp-for="Details.Email" class="form-control" />
                    <span asp-validation-for="Details.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details.WebsiteUrl" class="control-label font-weight-bold">Website</label>
                    <input asp-for="Details.WebsiteUrl" class="form-control" />
                    <span asp-validation-for="Details.WebsiteUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details.InstagramUrl" class="control-label font-weight-bold">Instagram</label>
                    <input asp-for="Details.InstagramUrl" class="form-control" />
                    <span asp-validation-for="Details.InstagramUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details.FacebookUrl" class="control-label font-weight-bold">Facebook</label>
                    <input asp-for="Details.FacebookUrl" class="form-control" />
                    <span asp-validation-for="Details.FacebookUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details.LinkedInUrl" class="control-label font-weight-bold">LinkedIn</label>
                    <input asp-for="Details.LinkedInUrl" class="form-control" />
                    <span asp-validation-for="Details.LinkedInUrl" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 bg-light border p-3 text-center">
