                            <input asp-for="OpeningTimes[6].ClosingHour" class="form-control" />
                            <span asp-validation-for="OpeningTimes[6].ClosingHour" class="text-danger"></span>
                        </div>
                        <span asp-validation-for="OpeningTimes[6]" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 bg-light border p-3 text-center">
            <a class="text-body" data-toggle="collapse" href="#Logo">Establishment Logo</a>
        </div>
        <div class="col-md-8">
            <div class="form-group collapse p-3" id="Logo">
                <input asp-for="Logo.IsLogo" type="hidden" value="true" />
                <input type="file" asp-for="Logo.PictureFile" />
                <span asp-validation-for="Logo.PictureFile" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 bg-light border p-3 text-center">
            <a class="text-body" data-toggle="collapse" href="#Pictures">Establishment Pictures</a>
        </div>
        <div class="col-md-8">
            <div class="form-group collapse p-3" id="Pictures">
                <div class="form-group">
                    <input asp-for="Pictures[0].IsLogo" type="hidden" value="false" />
                    <input type="file" asp-for="Pictures[0].PictureFile" />
                    <span asp-validation-for="Pictures[0]" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Pictures[1].IsLogo" type="hidden" value="false" />
