@using MyLibrary.Entities
@model MyLibrary.ViewModels.EstablishmentCreationVwMdl
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a new establishment</h1>

<h4>Please fill in the following fields and click "create" to save your establishment</h4>
<hr />
<form asp-action="Create" enctype = "multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-3 bg-light border p-3 text-center">
            <a class="text-body" data-toggle="collapse" href="#Establishment">Establishment Identification</a>
        </div>
        <div class="col-md-8">
            <div class="form-group collapse show" id="Establishment">
                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold">Name *</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VatNum" class="control-label font-weight-bold">VAT Number *</label>
                    <input asp-for="VatNum" class="form-control" />
                    <span asp-validation-for="VatNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label font-weight-bold">Professional email *</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label font-weight-bold">Description text (2000 char max)</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input asp-for="IsValidated" type="hidden" value="false" />
                <input asp-for="ManagerId" type="hidden" value="@User.Claims.First(x=>x.Type.Contains("sub")).Value" />
                <div class="form-group">
                    <label asp-for="TypeId" class="control-label font-weight-bold">Establishment Type *</label>
                    <select asp-for="TypeId" asp-items="Html.GetEnumSelectList(typeof(EstablishmentsTypesId))" class="form-control">
                        <option value="">Please select...</option>
                    </select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 bg-light border p-3 text-center">
            <a class="text-body" data-toggle="collapse" href="#Address">Establishment Address</a>
        </div>
        <div class="col-md-8">
            <div class="form-group collapse" id="Address">
                <div class="form-row">
                    <label asp-for="Address.Country" class="control-label font-weight-bold">Country *</label>
                    <select asp-for="Address.Country" asp-items="@new SelectList(ViewBag.CountryList)" class="form-control">
                        <option value="">Please select...</option>
                    </select>
                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="col">
                        <label asp-for="Address.City" class="control-label font-weight-bold">City *</label>
                        <input asp-for="Address.City" class="form-control" />
                        <span asp-validation-for="Address.City" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Address.ZipCode" class="control-label font-weight-bold">Zip Code *</label>
                        <input asp-for="Address.ZipCode" class="form-control" />
                        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <label asp-for="Address.Street" class="control-label font-weight-bold">Street *</label>
                    <input asp-for="Address.Street" class="form-control" />
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="col">
                        <label asp-for="Address.HouseNumber" class="control-label font-weight-bold">House number *</label>
                        <input asp-for="Address.HouseNumber" class="form-control" />
                        <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Address.BoxNumber" class="control-label font-weight-bold">Box</label>
                        <input asp-for="Address.BoxNumber" class="form-control" />
                        <span asp-validation-for="Address.BoxNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 bg-light border p-3 text-center">
            <a class="text-body" data-toggle="collapse" href="#Details">Establishment Details</a>
        </div>
        <div class="col-md-8">
            <div class="form-group collapse" id="Details">
                <div class="form-group">
