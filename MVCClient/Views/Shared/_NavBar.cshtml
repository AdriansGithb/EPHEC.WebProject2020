<nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3 justify-content-between">
    @*<div class="container">*@
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GoOut!</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            @if (@User.IsInRole(MyIdentityServerConstants.Role_User))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">User only Link</a>
                </li>
            }
        </ul>
    </div>
    <div class="navbar-collapse collapse">
        <ul class="navbar-nav">
            @if (@User.IsInRole(MyIdentityServerConstants.Role_Manager) || @User.IsInRole(MyIdentityServerConstants.Role_Admin))
            {
                <li class="nav-item dropdown text-right">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                        Manage Establishments
                    </a>
                    <div class="dropdown-menu">
                        <text class="dropdown-header">Create</text>
                        <a class="dropdown-item" asp-area="" asp-controller="Establishments" asp-action="Create">New establishment</a>
                        <div class="dropdown-divider"></div>
                        <text class="dropdown-header">Edit</text>

                    </div>
                </li>
            }
            @if (@User.IsInRole(MyIdentityServerConstants.Role_Admin))
            {
                <li class=" nav-item dropdown text-right">
                    <a class="nav-link dropdown-toggle text-danger" href="#" data-toggle="dropdown">
                        Website administration
                    </a>
                    <div class="dropdown-menu">
                        <text class="dropdown-header">Users</text>
                        <a class="dropdown-item" asp-area="" asp-controller="UserAccount" asp-action="Index">User Accounts</a>
                        <div class="dropdown-divider"></div>
                        <text class="dropdown-header">News</text>

                    </div>
                </li>
            }
