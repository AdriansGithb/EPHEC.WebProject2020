@using MyLibrary.Entities
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model MyLibrary.ViewModels.RegisterVwMdl

@{
    ViewData["Title"] = "Register";
}

<h1>Account Registration</h1>

<h4>Create your new account here</h4>
<hr />
<div class="row">
    <div class="col-lg-6">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="user.Email" class="control-label">Email address (Login)</label>
                <input asp-for="user.Email" class="form-control" placeholder="xxxx1234@example.com" />
            </div>
            <div class="form-row">
                <div class="col">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Your password" />
                </div>
                <div class="col">
                    <label asp-for="PassConfirmation" class="control-label">Confirm your password</label>
                    <input asp-for="PassConfirmation" class="form-control" placeholder="Confirm your password" />
                </div>
            </div>
            @*<div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" placeholder ="Your password"/>
        </div>
        <div class="form-group">
            <label asp-for="PassConfirmation" class="control-label">Confirm your password</label>
            <input asp-for="PassConfirmation" class="form-control" placeholder="Confirm your password"/>
        </div>*@
            <div class="form-row">
                <div class="col">
                    <label asp-for="user.LastName" class="control-label">Last Name</label>
                    <input asp-for="user.LastName" class="form-control" placeholder="Smith" />
                </div>
                <div class="col">
                    <label asp-for="user.FirstName" class="control-label">First Name</label>
                    <input asp-for="user.FirstName" class="form-control" placeholder="Bob" />
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <label asp-for="user.BirthDate" class="control-label">Date of Birth</label>
                    <input asp-for="user.BirthDate" class="form-control" type="date" />
                </div>
                <div class="col">
                    <label asp-for="user.GenderType_Id" class="control-label">Gender</label>
                    <select asp-for="user.GenderType_Id" asp-items="Html.GetEnumSelectList(typeof(GenderTypesId))" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="user.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="user.PhoneNumber" class="form-control" placeholder="02/555.55.55" />
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input asp-for="user.IsProfessional" type="checkbox" class="custom-control-input" id="switchPro">
                    <label asp-for="user.IsProfessional" class="custom-control-label" for="switchPro">Professional User Account</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


