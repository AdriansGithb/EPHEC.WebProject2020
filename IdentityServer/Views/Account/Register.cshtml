@using MyLibrary.Entities
@model MyLibrary.ViewModels.RegisterVwMdl

@{
    ViewData["Title"] = "Register";
}

<h1>Account Registration</h1>

<h4>Create your new account here</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="user.Email" class="control-label">Email address</label>
                <input asp-for="user.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PassConfirmation" class="control-label">Confirm your password</label>
                <input asp-for="PassConfirmation" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="user.LastName" class="control-label">Last Name</label>
                <input asp-for="user.LastName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="user.FirstName" class="control-label">First Name</label>
                <input asp-for="user.FirstName" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="user.BirthDate" class="control-label">Date of Birth</label>
                <input asp-for="user.BirthDate" class="form-control" type ="date"/>
            </div>
            <div class="form-group">
                <label asp-for="user.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="user.PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="user.GenderType.Name" class="control-label">Gender</label>
        <input asp-for="user.GenderType.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="user.IsProfessional" class="control-label">Professional User</label>
                <input asp-for="user.IsProfessional" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


