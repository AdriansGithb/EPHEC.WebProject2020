@using MyLibrary.Entities;
@model MyLibrary.ViewModels.UserAccountEditionVwMdl
@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "EditUserDetails";
}

<h1>Account editing</h1>

<h4>Please fill in the fields you want to modify</h4>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-lg-6">
        <form asp-action="EditUserDetails">
            <input type="hidden" asp-for="UserDetails.Id" />

            <div class="form-group">
                <label asp-for="UserDetails.Email" class="control-label">Email address (Login)</label>
                <input asp-for="UserDetails.Email" class="form-control" />
            </div>
            <div class="form-row was-validated">
                <div class="col">
                    <label asp-for="CurrentPassword" class="control-label">Current password *</label>
                    <input asp-for="CurrentPassword" type="password" class="form-control" required />
                </div>
            </div>
            <span class="font-italic font-weight-bold small">Current password is mandatory for any user account modification</span>
            <div class="form-row">
                <div class="col">
                    <label asp-for="NewPassword" class="control-label">New password</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="NewPassConfirmation" class="control-label">Confirm your new password</label>
                    <input asp-for="NewPassConfirmation" type="password" class="form-control" />
                </div>
            </div>
            <span class="font-italic small">Password minimal requirements : 6 chars, 1 Upper + 1 LowerCase, 1 Digit, 1 NonAlphanumeric</span>
            <div class="form-row">
                <div class="col">
                    <label asp-for="UserDetails.LastName" class="control-label">Last Name</label>
                    <input asp-for="UserDetails.LastName" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="UserDetails.FirstName" class="control-label">First Name</label>
                    <input asp-for="UserDetails.FirstName" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <label asp-for="UserDetails.BirthDate" class="control-label">Date of Birth</label>
                    <input asp-for="UserDetails.BirthDate" class="form-control" type="date" />
                </div>
                <div class="col">
                    <label asp-for="UserDetails.GenderType_Id" class="control-label">Gender</label>
                    <select asp-for="UserDetails.GenderType_Id" asp-items="Html.GetEnumSelectList(typeof(GenderTypesId))" class="form-control">
                        <option value="">Please select...</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserDetails.PhoneNumber" class="control-label">Mobile Phone Number</label>
                <input asp-for="UserDetails.PhoneNumber" class="form-control" />
                <span class="font-italic small">Use international format for non belgian mobile phone number</span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input asp-for="UserDetails.IsProfessional" type="checkbox" class="custom-control-input" id="switchPro">
                    <label asp-for="UserDetails.IsProfessional" class="custom-control-label" for="switchPro">Professional User Account</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save modifications" class="btn btn-primary btn-block btn-lg font-weight-bold" />
            </div>
        </form>
    </div>
</div>
